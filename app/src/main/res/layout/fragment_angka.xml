<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_pink"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp"
        tools:ignore="ExtraText">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo"
            android:layout_marginEnd="4dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Belajar Angka"
        android:textSize="24sp"
        android:textColor="#333333"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/btn_1"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/angka1"
                android:scaleType="centerInside"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true" />

            <ImageButton
                android:id="@+id/btn_2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/angka2"
                android:scaleType="centerInside"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true" />

            <ImageButton
                android:id="@+id/btn_3"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/angka3"
                android:scaleType="centerInside"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true" />

            <ImageButton
                android:id="@+id/btn_4"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/angka4"
                android:scaleType="centerInside"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/btn_5"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/angka5"
                android:scaleType="centerInside"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true" />

            <ImageButton
                android:id="@+id/btn_6"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/angka6"
                android:scaleType="centerInside"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true" />

            <ImageButton
                android:id="@+id/btn_7"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/angka7"
                android:scaleType="centerInside"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true" />

            <ImageButton
                android:id="@+id/btn_8"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/angka8"
                android:scaleType="centerInside"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/btn_9"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/angka9"
                android:scaleType="centerInside"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true" />

            <ImageButton
                android:id="@+id/btn_10"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/angka10"
                android:scaleType="centerInside"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true" />

            <ImageButton
                android:id="@+id/btn_11"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/angka11"
                android:scaleType="centerInside"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true" />

            <ImageButton
                android:id="@+id/btn_20"
                android:layout_width="85dp"
                android:layout_height="83dp"
                android:background="@drawable/angka20"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="fitXY" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <ImageButton
                android:id="@+id/btn_100"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/angka100"
                android:scaleType="centerInside"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true" />

            <ImageButton
                android:id="@+id/btn_1000"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/angka1000"
                android:scaleType="centerInside"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true" />

            <ImageButton
                android:id="@+id/btn_10000"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/angka10000"
                android:scaleType="centerInside"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true" />

            <ImageButton
                android:id="@+id/btn_100000"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/angka100000"
                android:scaleType="centerInside"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_keluar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/keluar_button_bg"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="sans-serif-medium"
        android:text="Keluar"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />


</LinearLayout>
